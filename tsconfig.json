{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"isolatedModules": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "lib",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": false,
		"typeRoots": [
			"../node_modules/@types/"
		],
		"allowSyntheticDefaultImports": true,
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017"
		]
	},
	"include": [
		"chaos/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"lib"
	],
	"compileOnSave": false
}
